<Window x:Class="RVP.Task._4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RVP.Task._4"
        Background="Transparent"
        WindowStyle="None"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        
        Title="MainWindow" Height="450" Width="850">
    
    <Grid>
        <Frame NavigationUIVisibility="Hidden"
               x:Name="MainFrame"/>
        <Button Background="Red"
                        x:Name="CloseBtn"
                        Click="CloseBtn_Click"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        BorderBrush="Transparent" Width="20" Height="20" Margin="10, 10, 10, 10"/>
        <Button Background="DarkOrange"
                        x:Name="MinimizeBtn"
                        Click="MinimizeBtn_Click"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Content="*"
                        BorderBrush="Transparent" Width="20" Height="20" Margin="40, 10, 10, 10 "/>

    </Grid>
</Window>